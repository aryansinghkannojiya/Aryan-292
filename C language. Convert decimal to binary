#include <stdio.h>
#include <math.h>

int main() {
    int decimal, remainder, i = 1;
    long long binary = 0;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    while (decimal != 0) {
        remainder = decimal % 2;
        decimal /= 2;
        binary += remainder * i;
        i *= 10;
    }

    printf("Binary equivalent: %lld\n", binary);
    return 0;
}
