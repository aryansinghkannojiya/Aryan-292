#include <stdio.h>

int main() {
    int a, d, n, i, term;

    printf("Enter the starting term (a): ");
    scanf("%d", &a);
    printf("Enter the common difference (d): ");
    scanf("%d", &d);
    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    printf("Arithmetic Progression: ");
    for (i = 0; i < n; ++i) {
        term = a + (i * d);
        printf("%d", term);
        if (i < n - 1) {
            printf(", ");
        }
    }
    printf("\n");
    return 0;
}
