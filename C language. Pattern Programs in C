#include <stdio.h>

int main() {
    int i, j, rows;

    printf("Enter the number of rows for the pyramid: ");
    scanf("%d", &rows);

    for (i = 1; i <= rows; ++i) {
        // Print spaces for alignment
        for (j = 1; j <= rows - i; ++j) {
            printf("  "); // Two spaces for better spacing
        }
        // Print numbers
        for (j = 1; j <= 2 * i - 1; ++j) {
            printf("%d ", i);
        }
        printf("\n");
    }
    return 0;
}
