#include <stdio.h>

long long factorial(int n) {
    long long fact = 1;
    for (int i = 1; i <= n; ++i) {
        fact *= i;
    }
    return fact;
}

int main() {
    int n, i;

    printf("Enter the number (N) to print factorials up to: ");
    scanf("%d", &n);

    printf("Factorial Series (1! to %d!):\n", n);
    for (i = 1; i <= n; ++i) {
        printf("%d! = %lld\n", i, factorial(i));
    }
    return 0;
}
