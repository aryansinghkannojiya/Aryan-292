#include <stdio.h>
#include <math.h>

int main() {
    long long binary, decimal = 0;
    int rem, base = 1;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    while (binary > 0) {
        rem = binary % 10;
        decimal = decimal + rem * base;
        binary = binary / 10;
        base = base * 2;
    }

    printf("Decimal equivalent: %lld\n", decimal);
    return 0;
}
