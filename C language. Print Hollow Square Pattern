#include <stdio.h>

int main() {
    int i, j, size;

    printf("Enter the size of the square: ");
    scanf("%d", &size);

    for (i = 1; i <= size; i++) {
        for (j = 1; j <= size; j++) {
            // Check if it's a border position
            if (i == 1 || i == size || j == 1 || j == size) {
                printf("* ");
            } else {
                printf("  "); // Two spaces for alignment
            }
        }
        printf("\n");
    }
    return 0;
}
