#include <stdio.h>

long long power(int base, int exp) {
    long long result = 1;
    while (exp != 0) {
        result *= base;
        --exp;
    }
    return result;
}

int main() {
    int base, exp;
    printf("Enter base and exponent: ");
    scanf("%d %d", &base, &exp);
    printf("%d^%d = %lld\n", base, exp, power(base, exp));
    return 0;
}
