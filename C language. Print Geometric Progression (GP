#include <stdio.h>
#include <math.h>

int main() {
    double a, r; // Use double for potentially large numbers/fractions
    int n, i;

    printf("Enter the starting term (a): ");
    scanf("%lf", &a);
    printf("Enter the common ratio (r): ");
    scanf("%lf", &r);
    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    printf("Geometric Progression: ");
    for (i = 0; i < n; ++i) {
        double term = a * pow(r, i);
        printf("%.2f", term);
        if (i < n - 1) {
            printf(", ");
        }
    }
    printf("\n");
    return 0;
}
